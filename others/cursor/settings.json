{
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js, ${capture}.typegen.ts",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts, ${capture}.typegen.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
        "*.mts": "${capture}.typegen.ts",
        "*.cts": "${capture}.typegen.ts"
    },
    "editor.fontFamily": "'PragmataPro Mono Liga'",
    "editor.fontSize": 20,
    "workbench.colorTheme": "Iceberg",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.fontSize": 20,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.explorerKind": "external",
    "[typescript]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "hadolint.hadolintPath": "",
    "remote.autoForwardPortsSource": "hybrid",
    "editor.fontLigatures": true,
    "cursor.cpp.disabledLanguages": [],
    "window.commandCenter": false,
    "window.titleBarStyle": "native",
    "explorer.openEditors.minVisible": 10,
    "explorer.openEditors.visible": 10,
    "window.customTitleBarVisibility": "never",
    "coverage-gutters.coverageFileNames": [
        ".coverage",
        "lcov.info",
        "cov.xml",
        "coverage.xml",
        "jacoco.xml",
        "coverage.cobertura.xml"
    ],
    "redhat.telemetry.enabled": false,
    "dev.containers.defaultFeatures": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": false,
            "upgradePackages": false,
        }
    },
    "dotfiles.repository": "https://github.com/impactaky/dotfiles",
}
