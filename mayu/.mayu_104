include "104.mayu" # 104 キーボード設定 

keymap Global

mod ctrl += !!CapsLock
# key *CapsLock= C-C
key *CapsLock= Esc

mod shift += !!LeftShift
key *LeftShift= W-C-Home

mod windows += !!Tab
key *Tab = Tab

key *S-C-*A-H = Left
key *S-C-*A-I = Tab
key *S-C-*A-J = Down
key *S-C-*A-K = Up
key *S-C-*A-L = Right
key *S-C-*A-M = C-C C-C o

key S-C-Semicolon  = &Toggle(Lock0, on)

# 割り当ての解放
key L0-*S-C-*A-H   = C-H
key L0-*S-C-*A-I   = C-I
key L0-*S-C-*A-J   = C-J
key L0-*S-C-*A-K   = C-K
key L0-*S-C-*A-L   = C-L
key L0-S-C-Apostrophe = &Toggle(Lock0, off)
